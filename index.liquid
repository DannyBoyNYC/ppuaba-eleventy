---
layout: layout.liquid
---

<section class="section">
  <ul>
    <!-- prettier-ignore -->
    {% assign post_by_order = contentful | sort: "ordering" %} 
    {% for post in post_by_order %}
    {% if post.ordering > 0 %}

    <li>
      <a href="pages/{{ post.slug | url }}">
        <img
          class=""
          width="240"
          src="{{ post.imageUrl }}"
          alt="{{ post.title }}"
          loading="lazy"
        />
        <h2>
          {{ post.title }}
        </h2>
        <h3 class="date">Publish date {{ post.date | date : "%b %d, %Y" }}</h3>
      </a>
    </li>

    <!-- <script>
      console.log("Hello from index.liquid", "{{post.ordering}}");
    </script> -->

    <!-- prettier-ignore -->
    {% endif %} 
  {% endfor %}
  </ul>
</section>
